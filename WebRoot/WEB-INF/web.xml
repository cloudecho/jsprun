    <filter-name>RefuseAccess</filter-name>
    <url-pattern>/forumdata/logs/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>RefuseAccess</filter-name>
    <url-pattern>/templates/*</url-pattern>
