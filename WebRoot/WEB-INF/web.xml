    <url-pattern>/include/crons/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>RefuseAccess</filter-name>
    <url-pattern>/include/magics/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>RefuseAccess</filter-name>
    <url-pattern>/archiver/include/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>RefuseAccess</filter-name>
    <url-pattern>*.properties</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>RefuseAccess_wap</filter-name>
    <filter-class>cn.jsprun.filter.AccessDenied_wml</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RefuseAccess_wap</filter-name>
    <url-pattern>/wap/include/*</url-pattern>
  </filter-mapping>
  
